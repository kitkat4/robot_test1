<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="idler_wheel_gazebo" params="prefix">
    <gazebo reference="${prefix}_idler_wheel_base">
      <selfCollide>false</selfCollide>
      <mu1 value="0.05"/>
      <mu2 value="0.05"/>
    </gazebo>

    <gazebo reference="${prefix}_idler_wheel">
      <selfCollide>false</selfCollide>
      <mu1 value="0.8"/>
      <mu2 value="0.8"/>
    </gazebo>
  </xacro:macro>
  
</robot>


